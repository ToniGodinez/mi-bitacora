/* Variables y estilos base */
:root {
  --bg: #07090b;
  --panel: #0f1417;
  --text: #e6eef3;
  --muted: #9aa8b0;
  --accent-cyan: #00e5ff;
  --accent-cyan-dark: #009bb3;
  --accent-red: #ff3b6b;
}

.recommend-page {
  padding-top: 100px; /* Espacio para el header fijo */
  max-width: 1100px;
  margin: 0 auto;
  color: var(--text);
  padding-left: 1rem;
  padding-right: 1rem;
  padding-bottom: 1rem;
  font-family: 'Roboto', sans-serif;
}

/* =========================
   RESPONSIVE HEADER NAVIGATION
   ========================= */

/* Header principal */
.main-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: rgba(7, 9, 11, 0.95);
  backdrop-filter: blur(12px);
  border-bottom: 1px solid rgba(0, 229, 255, 0.1);
  box-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
}

.header-container {
  max-width: 1200px;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 1rem 1.5rem;
}

.brand {
  flex-shrink: 0;
}

.brand-title {
  font-size: 1.5rem;
  font-weight: 800;
  color: var(--accent-cyan);
  margin: 0;
  letter-spacing: -0.02em;
}

/* Desktop Navigation */
.desktop-navigation {
  display: flex;
  align-items: center;
  gap: 2rem;
}

.nav-link {
  background: none;
  border: none;
  color: var(--text);
  font-size: 1rem;
  font-weight: 500;
  padding: 0.5rem 1rem;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
}

.nav-link:hover {
  color: var(--accent-cyan);
  background: rgba(0, 229, 255, 0.1);
  transform: translateY(-1px);
}

.nav-link.active {
  color: var(--accent-cyan);
  background: rgba(0, 229, 255, 0.15);
}

/* Mobile Menu Button */
.mobile-menu-btn {
  display: none;
  background: none;
  border: none;
  cursor: pointer;
  padding: 0.5rem;
  z-index: 1001;
}

.hamburger {
  width: 24px;
  height: 18px;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.hamburger span {
  width: 100%;
  height: 2px;
  background: var(--text);
  border-radius: 1px;
  transition: all 0.3s ease;
}

.hamburger.open span:nth-child(1) {
  transform: rotate(45deg) translate(5px, 6px);
}

.hamburger.open span:nth-child(2) {
  opacity: 0;
}

.hamburger.open span:nth-child(3) {
  transform: rotate(-45deg) translate(7px, -8px);
}

/* Mobile Sidebar */
.sidebar-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.8);
  z-index: 999;
  opacity: 0;
  animation: fadeIn 0.3s ease forwards;
}

@keyframes fadeIn {
  to { opacity: 1; }
}

.mobile-sidebar {
  position: fixed;
  top: 0;
  left: -320px;
  width: 320px;
  height: 100vh;
  background: linear-gradient(180deg, var(--bg) 0%, var(--panel) 100%);
  z-index: 1000;
  transition: left 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  display: flex;
  flex-direction: column;
  box-shadow: 2px 0 30px rgba(0, 0, 0, 0.7);
  border-right: 1px solid rgba(0, 229, 255, 0.2);
}

.mobile-sidebar.open {
  left: 0;
}

.sidebar-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 2rem 1.5rem 1.5rem;
  border-bottom: 2px solid rgba(0, 229, 255, 0.2);
  background: linear-gradient(135deg, rgba(0, 229, 255, 0.05) 0%, rgba(0, 150, 200, 0.02) 100%);
  position: relative;
}

.sidebar-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2px;
  background: linear-gradient(90deg, var(--accent-cyan), rgba(0, 229, 255, 0.3));
}

.sidebar-brand {
  color: var(--accent-cyan);
  font-size: 1.4rem;
  font-weight: 800;
  margin: 0;
  text-shadow: 0 0 10px rgba(0, 229, 255, 0.3);
}

.sidebar-close {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(0, 229, 255, 0.2);
  color: var(--text);
  font-size: 1.8rem;
  cursor: pointer;
  padding: 0.5rem;
  border-radius: 8px;
  transition: all 0.3s ease;
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.sidebar-close:hover {
  background: rgba(0, 229, 255, 0.1);
  color: var(--accent-cyan);
  border-color: var(--accent-cyan);
  transform: rotate(90deg);
  box-shadow: 0 0 15px rgba(0, 229, 255, 0.3);
}

.sidebar-menu {
  flex: 1;
  padding: 2rem 0;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.sidebar-link {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  background: none;
  border: none;
  color: var(--text) !important;
  text-align: left;
  font-size: 1.1rem;
  font-weight: 600;
  padding: 1.2rem 1.5rem;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  margin: 0 1rem;
  border-radius: 12px;
  border-left: 3px solid transparent;
  opacity: 1;
  visibility: visible;
  z-index: 1001;
}

.sidebar-link::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 0;
  height: 0;
  background: var(--accent-cyan);
  border-radius: 0 4px 4px 0;
  transition: all 0.3s ease;
}

.sidebar-link:hover {
  background: linear-gradient(135deg, rgba(0, 229, 255, 0.1) 0%, rgba(0, 150, 200, 0.05) 100%) !important;
  color: var(--accent-cyan) !important;
  padding-left: 2rem;
  border-left-color: var(--accent-cyan);
  box-shadow: 0 4px 15px rgba(0, 229, 255, 0.1);
  transform: translateY(-1px);
}

.sidebar-link:hover::before {
  width: 4px;
  height: 60%;
}

.sidebar-link:active {
  transform: translateY(0);
  background: linear-gradient(135deg, rgba(0, 229, 255, 0.15) 0%, rgba(0, 150, 200, 0.08) 100%) !important;
}

/* Banner solo con imagen de fondo */
.site-banner {
  background: url('https://iili.io/FyNGFHB.jpg');
  background-size: cover;
  background-position: center center;
  border-radius: 12px;
  height: clamp(140px, 22vw, 320px);
  position: relative;
  overflow: hidden;
  background-color: #000;
}

.site-banner::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  z-index: 1;
}

.site-banner > * {
  position: relative;
  z-index: 2;
}

/* Contenedor del título y fecha */
.site-header {
  margin-top: 1.5rem;
  margin-bottom: 1.5rem;
  padding: 0 1rem;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 2rem;
}

.title-block {
  flex: 1;
}

.site-title {
  font-size: clamp(1.1rem, 2.4vw, 1.6rem);
  font-weight: 800;
}

.meta {
  color: var(--muted);
  font-size: 0.9rem;
}

@media (max-width: 720px) {
  .header-content {
    flex-direction: column;
    gap: 1rem;
  }
  
  .meta {
    align-self: flex-end;
  }
}

/* =========================
   RESPONSIVE MEDIA QUERIES
   ========================= */

@media (min-width: 768px) {
  .mobile-menu-btn {
    display: none;
  }
  
  .desktop-navigation {
    display: flex;
  }
}

@media (max-width: 767px) {
  .desktop-navigation {
    display: none;
  }
  
  .mobile-menu-btn {
    display: block;
  }
  
  .header-container {
    padding: 1rem;
  }
  
  .brand-title {
    font-size: 1.3rem;
  }
}

/* =========================
   MOVIE RECOMMENDATION STYLES
   ========================= */

.recommend-title {
  font-size: 1.5rem;
  margin-bottom: 1rem;
  color: var(--accent-cyan);
  text-align: center;
  font-weight: 600;
}

/* Tarjeta de película compacta */
.movie-card {
  background: rgba(255,255,255,0.03);
  border: 1px solid rgba(0,229,255,0.2);
  border-radius: 12px;
  padding: 1.5rem;
  max-width: 525px;
  margin: 0 auto;
  box-shadow: 0 4px 20px rgba(0,0,0,0.3);
  transition: all 0.3s ease;
  width: 100%;
  box-sizing: border-box;
}

.movie-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 32px rgba(0,0,0,0.4);
  border-color: rgba(0,229,255,0.4);
}

/* Header compacto con poster y título */
.movie-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;
  margin-bottom: 1.5rem;
}

.movie-poster {
  width: 160px;
  height: 240px;
  border-radius: 8px;
  box-shadow: 0 4px 16px rgba(0,0,0,0.5);
  object-fit: cover;
  transition: transform 0.3s ease;
}

.movie-poster:hover {
  transform: scale(1.03);
}

.movie-title-section {
  text-align: center;
}

.movie-title {
  font-size: 1.6rem;
  margin: 0;
  line-height: 1.2;
  color: var(--text);
  font-weight: 600;
}

.movie-year {
  font-size: 1rem;
  color: var(--accent-cyan);
  opacity: 0.8;
  display: block;
  margin-top: 0.3rem;
}

/* Contenido de la película */
.movie-content {
  background: transparent;
  border-radius: 8px;
  padding: 1rem;
  border: none;
}

.movie-details {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  margin-bottom: 1rem;
}

.meta-info {
  display: flex;
  align-items: flex-start;
  gap: 0.5rem;
  padding: 0.4rem 0;
  border-bottom: 1px solid rgba(0,229,255,0.1);
  font-size: 0.9rem;
  line-height: 1.4;
}

.meta-info:last-child {
  border-bottom: none;
}

.meta-info strong {
  color: var(--accent-cyan);
  font-weight: 600;
  min-width: 60px;
  flex-shrink: 0;
}

.synopsis {
  background: rgba(0,229,255,0.03);
  border-left: 2px solid var(--accent-cyan);
  padding: 0.8rem;
  margin-bottom: 1rem;
  border-radius: 4px;
  font-size: 0.9rem;
  line-height: 1.5;
  font-style: italic;
  opacity: 0.9;
}

/* Botones de acción compactos */
.action-buttons {
  display: flex;
  gap: 0.8rem;
  justify-content: center;
}

.btn-primary,
.btn-secondary {
  flex: 1;
  max-width: 140px;
  padding: 0.7rem 1rem;
  border-radius: 8px;
  font-size: 0.9rem;
  cursor: pointer;
  transition: all 0.3s ease;
  border: none;
  font-family: 'Roboto', sans-serif;
  font-weight: 500;
  box-shadow: 0 2px 8px rgba(0,0,0,0.2);
  white-space: nowrap;
}

.btn-primary {
  background: var(--accent-cyan);
  color: #001119;
}

.btn-primary:hover {
  background: var(--accent-cyan-dark);
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(0,229,255,0.3);
}

.btn-secondary {
  background: rgba(255,255,255,0.1);
  color: var(--text);
  border: 1px solid rgba(255,255,255,0.2);
}

.btn-secondary:hover {
  background: rgba(255,255,255,0.2);
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(255,255,255,0.1);
}

/* Estados de carga y error */
.loading,
.no-movies {
  text-align: center;
  padding: 3rem;
  font-size: 1.2rem;
  color: var(--muted);
}

.no-movies h2 {
  color: var(--text);
  margin-bottom: 1rem;
}

.no-movies p {
  color: var(--muted);
  line-height: 1.5;
}


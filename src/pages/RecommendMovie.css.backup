}

.synopsis strong {
  color: var(--accent-cyan);
  font-style: normal;
  display: block;
  margin-bottom: 0.5rem;
}

/* Prevenir desbordamientos globales en móviles */
@media (max-width: 768px) {
  * {
    box-sizing: border-box !important;
  }
  
  html, body {
    overflow-x: hidden !important;
    max-width: 100vw !important;
  }
  
  .main-header,
  .site-banner,
